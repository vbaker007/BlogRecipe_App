<%= render 'shared/page_title', title: "Ingredients Index" %>
      <style>
          body {
              background-color: #C0D6E4;
          }
      </style>
<ul class="nav nav-tabs">
  <li class="active">
    <%= link_to "Recipes", recipes_path %>
  </li>
  <li>
    <%= link_to "Chefs", chefs_path %>
  </li>
  <li>
    <%= link_to "Browse by Style", styles_path %>
  </li>
  <li>
    <%= link_to "Browse by Ingredient", ingredients_path %>
  </li>
</ul>
<% if logged_in? %>
  <ul class="nav nav-tabs">
    <li class="active">
      <%= link_to "View Profile", chef_path(current_user) %>
    </li>
    <li>
      <%= link_to "Edit Profile", edit_chef_path(current_user) %>
    </li>
    <li>
      <%= link_to "Sign in with Twitter", "/auth/twitter/" %>
    </li>
    <li><span class="badge">
      <%= link_to "Sign out", signout_path %>
    </span></li>
  </ul>
<% end %>

<%= will_paginate %>
<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <div class="list-group">
      <a href="#" class="list-group-item active">

        <h4 class="list-group-item-heading">Ingredients Featured in MyRecipes</h4>
        <% Ingredient.all.each do |ingredient| %></a>
          <button type="button" class="list-group-item text-align:center"><%= link_to ingredient.name, ingredient_path(ingredient) %></button>
         <% end %>
      </a>
    </div>
  </div>
</div>

