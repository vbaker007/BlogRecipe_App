<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
      <%= link_to "myRecipes", root_path, class: "btn btn-lg btn-success", id: "logo" %>
    <div class="nav_item">
      <%= link_to "link 1", "", class: "btn btn-default btn-warning" %>
    </div>
    <div class="nav_item">
      <%= link_to "Edit Recipe", "", class: "btn btn-default btn-warning" %>
    </div>
    <% if logged_in? %>
      <div class="nav_item">
        <%= link_to "New Recipe", new_recipe_path, class: "btn btn-default btn-warning" %>
      </div>
      <ul class="nav_item">
        <li class="dropdown">
          <%= link_to '#', class: "btn btn-default btn-danger dropdown-toggle", "data-toggle" => "dropdown" do %>
            <%= current_user.chefname %> <b class="caret"></b>
          <% end %>
          <ul class="dropdown-menu">
            <li><%= link_to "View Profile Page", chef_path(current_user) %></li>
            <li><%= link_to "Edit Profile Page", edit_chef_path(current_user) %></li>
            <li class="divider"></li>
            <li><%= link_to "Logout", logout_path %></li>
          </ul>
        </li>
      </ul>
    <% else %>
      <div class="nav_item">
        
       <div class="nav_item">
        <%= link_to "Logout", logout_path, class: "btn btn-default btn-danger" %>
      </div>
    <% else %>
      <div class="nav_item">
        <%= link_to "Log in", login_path, class: "btn btn-default btn-warning" %>
      </div>
    <% end %>
  </div>
</header>