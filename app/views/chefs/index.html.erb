<%= render 'shared/page_title', title: "All Chefs" %>

<ul class="nav nav-tabs">
  <li>
    <%= link_to "Recipes", recipes_path %>
  </li>
  <li class='active'>
    <%= link_to "Chefs", chefs_path %>
  </li>
  <li>
    <%= link_to "Browse by Style", styles_path %>
  </li>
  <li>
    <%= link_to "Browse by Ingredient", ingredients_path %>
  </li>
</ul>
<% if logged_in? %>
  <ul class="nav nav-tabs">
    <li class="active">
      <%= link_to "View Profile", chef_path(current_user) %>
    </li>
    <li>
      <%= link_to "Edit Profile", edit_chef_path(current_user) %>
    </li>
    <li>
      <%= link_to "Sign in with Twitter", "/auth/twitter/" %>
    </li>
    <li>
      <%= link_to "Sign out", signout_path %>
    </li>
  </ul>
<% end %>
<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= will_paginate %>
  </div>
</div>

<% @chefs.each do |chef| %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4 center">
      <%= link_to gravatar_for(chef, size: 200), chef_path(chef) %>
      <p>
        <h5>Chef name: <%= chef.chefname %></h5>
      </p>
    </div>
  </div>
<% end %>
<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= will_paginate %>
  </div>
</div>
