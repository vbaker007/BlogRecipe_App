<p>
  <h1>Create a new Recipe</h1>
  <hr/>
</p>

<div class="row">
  <div class="well col-md-8 col-md-offset-2">
    <%= form_for @recipe do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :summary %>
      <%= f.text_field :summary %>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= f.submit 'Create Recipe', class: "btn btn-success" %>
    <% end %>
  </div>
</div>